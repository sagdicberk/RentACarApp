@model IEnumerable<Car>

<h2>Car List</h2>

<div class="card display-d">
    <form method="get" action="/Car/List" class="mb-3">
        <input type="text" name="searchTerm" placeholder="Search cars" />
        <button type="submit">Search</button>
    </form>

    <a asp-action="Create" class="btn btn-primary mb-3">Create</a>


</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Id)</th>
            <th>@Html.DisplayNameFor(m => m.Brand)</th>
            <th>@Html.DisplayNameFor(m => m.Model)</th>
            <th>@Html.DisplayNameFor(m => m.PricePerDay)</th>
            <th>@Html.DisplayNameFor(m => m.Image)</th>
            <th>@Html.DisplayNameFor(m => m.IsActive)</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
