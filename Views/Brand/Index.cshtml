@model IEnumerable<Brand>

@{
    ViewData["Title"] = "Markalar";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-action="Create" asp-controller="Brand" class="btn btn-primary">Marka Ekle</a>
    <a asp-controller="Car" asp-action="List" class="btn btn-secondary">Araba İşlemleri</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Marka Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.Name</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@brand.Id" class="btn btn-danger btn-sm">Sil</a>
                    <a asp-action="Update" asp-route-id="@brand.Id" class="btn btn-warning btn-sm">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
